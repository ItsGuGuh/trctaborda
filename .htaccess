# Habilita o rewrite engine
RewriteEngine On

# Permite acesso CORS
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type"

# Para requisições OPTIONS, retorna sucesso
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Roteamento para a API
RewriteRule ^clientes-parceiros$ clientes-parceiros.js [L]
RewriteRule ^clientes$ clientes-parceiros.js [L]
RewriteRule ^parceiros$ clientes-parceiros.js [L]
RewriteRule ^categoria/(.*)$ clientes-parceiros.js [L]